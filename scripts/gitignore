#!/usr/bin/env bash
if [[ $# -lt 1 ]]; then
        echo "Usage: gitignore <language>"
        exit 1
fi

if [[ $2 = "-s" ]]; then
        SAVE_TO=".gitignore"
else
        SAVE_TO="-"
fi


wget --quiet --output-document $SAVE_TO "https://raw.githubusercontent.com/github/gitignore/refs/heads/main/$1.gitignore"
